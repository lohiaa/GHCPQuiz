        </div>

        <div id="q-container" class="question-box">
            </div>

        <div class="controls">
            <button id="check-btn" class="btn btn-primary">Check Answer</button>
            <button id="next-btn" class="btn btn-secondary" style="display:none;">Next Question</button>
        </div>

        <div id="feedback-area" class="feedback"></div>
    </div>

    <div id="result-ui" style="display:none; text-align: center;">
        <h2>Exam Complete!</h2>
        <div style="font-size: 2.5rem; margin: 20px 0; color: #1a73e8;">
            <span id="final-score">0</span> / 75
        </div>
        <p id="performance-msg"></p>
        <button onclick="location.reload()" class="btn btn-primary">Restart Exam</button>
